{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "required": [
        "name",
        "entities"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "attributes"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "attributes": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "name",
                    "type",
                    "nullable",
                    "unique"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "nullable": {
                      "type": "boolean"
                    },
                    "unique": {
                      "type": "boolean"
                    },
                    "default": {}
                  }
                }
              },
              "relations": {
                "type": "array"
              },
              "catalogs": {
                "type": "array"
              }
            }
          }
        },
        "catalogs": {
          "type": "array"
        }
      }
    }
  },
  "required": [
    "app"
  ]
}